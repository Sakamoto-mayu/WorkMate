generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("VITE_APP_DATABASE_URL")
}

model Attendance {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  status   String?
  clockIn  Int?
  clockOut Int?
  break    Int?
  date     DateTime?
}

model User {
  id                       Int     @id @default(autoincrement())
  email                    String  @unique
  name                     String?
  acceptTermsAndConditions Boolean
}
